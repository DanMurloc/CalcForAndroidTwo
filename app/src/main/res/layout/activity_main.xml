<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="100dp"
                    android:textColor="@color/white"
                    android:background="@color/pink"
                    >
                </TextView>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <Button
                        android:id="@+id/num1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="50dp"
                        android:onClick="onClick"
                        android:background="@drawable/custombut">
                    </Button>
                    <Button
                        android:id="@+id/num2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="50dp"
                        android:onClick="onClick"
                        android:background="@drawable/custombut">
                    </Button>
                    <Button
                        android:id="@+id/num3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="50dp"
                        android:onClick="onClick"
                        android:background="@drawable/custombut">
                    </Button>
                    <Button
                        android:id="@+id/numdel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textSize="50dp"
                        android:onClick="onClick"
                        android:background="@drawable/custombut">
                    </Button>
                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/num4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombut"
                        android:text="4"
                        android:onClick="onClick"
                        android:textSize="50dp">
                    </Button>
                    <Button
                        android:id="@+id/num5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombut"
                        android:text="5"
                        android:onClick="onClick"
                        android:textSize="50dp">
                    </Button>
                    <Button
                        android:id="@+id/num6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombut"
                        android:text="6"
                        android:onClick="onClick"
                        android:textSize="50dp">
                    </Button>
                    <Button
                        android:id="@+id/numpmult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombut"
                        android:text="x"
                        android:onClick="onClick"
                        android:textSize="50dp">
                    </Button>
                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/num7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombut"
                        android:text="7"
                        android:onClick="onClick"
                        android:textSize="50dp">
                    </Button>
                    <Button
                        android:id="@+id/num8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombut"
                        android:text="8"
                        android:onClick="onClick"
                        android:textSize="50dp">
                    </Button>
                    <Button
                        android:id="@+id/num9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:background="@drawable/custombut"
                        android:text="9"
                        android:textSize="50dp">
                    </Button>
                    <Button
                        android:id="@+id/numplus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custombut"
                        android:text="+"
                        android:onClick="onClick"
                        android:textSize="50dp">
                    </Button>
                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/numac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AC"
                        android:onClick="onClick"
                        android:background="@drawable/custombut"
                        android:textSize="50dp">
                    </Button>
                    <Button
                        android:id="@+id/num0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:onClick="onClick"
                        android:background="@drawable/custombut"
                        android:textSize="50dp">
                    </Button>
                    <Button
                        android:id="@+id/numproc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="="
                        android:onClick="onClick"
                        android:background="@drawable/custombut"
                        android:textSize="50dp">
                    </Button>
                    <Button
                        android:id="@+id/nummin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:onClick="onClick"
                        android:background="@drawable/custombut"
                        android:textSize="50dp">
                    </Button>
                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/green"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/njd"
                        android:onClick="launchAbout">

                    </ImageView>
                    <com.google.android.gms.ads.AdView
                        xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/adView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        ads:adSize="BANNER"
                        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"/>

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>